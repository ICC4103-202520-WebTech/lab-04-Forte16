<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">Service Details</h2>
        </div>
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-sm-4 fw-bold">Service ID:</div>
            <div class="col-sm-8"><%= @service.id %></div>
          </div>
          
          <div class="row mb-3">
            <div class="col-sm-4 fw-bold">Name:</div>
            <div class="col-sm-8"><%= @service.name %></div>
          </div>
          
          <div class="row mb-3">
            <div class="col-sm-4 fw-bold">Price:</div>
            <div class="col-sm-8">$<%= @service.price %></div>
          </div>
          
          <div class="row mb-3">
            <div class="col-sm-4 fw-bold">Status:</div>
            <div class="col-sm-8">
              <% if @service.is_active %>
                <span class="badge bg-success">Active</span>
              <% else %>
                <span class="badge bg-secondary">Inactive</span>
              <% end %>
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-sm-4 fw-bold">Created At:</div>
            <div class="col-sm-8"><%= @service.created_at.strftime("%B %d, %Y") %></div>
          </div>
          
          <div class="d-flex justify-content-between mt-4">
            <%= link_to 'Edit Service', edit_service_path(@service), class: 'btn btn-primary' %>
            <%= link_to 'Back to Services', services_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
